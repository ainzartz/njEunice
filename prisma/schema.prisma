generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MarketInsight {
  id        String   @id @default(cuid())
  contentEn String   // English content
  contentKo String   // Korean content
  createdAt DateTime @default(now())
}

model User {
  id               String               @id @default(cuid())
  email            String               @unique
  passwordHash     String?
  firstNameEncrypted String @default("")
  lastNameEncrypted  String @default("")
  nameEncrypted      String?
  phoneEncrypted   String
  addressEncrypted String
  dobEncrypted     String
  autoEmail        Boolean              @default(false)
  autoSms          Boolean              @default(false)
  isAdmin          Boolean              @default(false)
  isLogin          Boolean              @default(false)
  lastLoginAt      DateTime?
  resetToken       String?              @unique
  resetTokenExpiry DateTime?
  createdAt        DateTime             @default(now())
  updatedAt        DateTime             @updatedAt
  interestCities   UserInterestCity[]
  lastPasswordChangeAt DateTime? @default(now())
  passwordHistory      PasswordHistory[]
  isDeleted            Boolean              @default(false)
  messages             Message[]

  @@map("users")
}

model PasswordHistory {
  id           String   @id @default(cuid())
  userId       String
  passwordHash String
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("password_history")
}

model County {
  id       String    @id @default(cuid())
  name     String
  state    String    @default("NJ")
  isTarget Boolean   @default(false)
  cities   City[]
}

model City {
  id              String             @id @default(cuid())
  name            String
  countyId        String
  county          County             @relation(fields: [countyId], references: [id])
  zipCodes        ZipCode[]
  interestedUsers UserInterestCity[]

  @@unique([name, countyId])
}

model ZipCode {
  code   String @id
  cityId String
  city   City   @relation(fields: [cityId], references: [id])
}

model UserInterestCity {
  userId String
  cityId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  city   City   @relation(fields: [cityId], references: [id], onDelete: Cascade)

  @@id([userId, cityId])
}

model Message {
  id        String   @id @default(cuid())
  userId    String
  content   String   @db.Text
  isInbound Boolean  @default(true) // true if message from user to admin, false if admin to user
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("messages")
}