generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MarketInsight {
  id        String   @id @default(cuid())
  contentEn String   // English content
  contentKo String   // Korean content
  createdAt DateTime @default(now())
}

model User {
  id               String               @id @default(cuid())
  email            String               @unique
  passwordHash     String
  firstNameEncrypted String @default("")
  lastNameEncrypted  String @default("")
  nameEncrypted      String?
  phoneEncrypted   String
  addressEncrypted String
  dobEncrypted     String
  autoEmail        Boolean              @default(false)
  autoSms          Boolean              @default(false)
  isAdmin          Boolean              @default(false)
  lastLoginAt      DateTime?
  resetToken       String?              @unique
  resetTokenExpiry DateTime?
  createdAt        DateTime             @default(now())
  updatedAt        DateTime             @updatedAt
  interestRegions  UserInterestRegion[]
  lastPasswordChangeAt DateTime? @default(now())
  passwordHistory      PasswordHistory[]

  @@map("users")
}

model PasswordHistory {
  id           String   @id @default(cuid())
  userId       String
  passwordHash String
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("password_history")
}

model RegionCode {
  code            String               @id
  description     String
  zipCodes        ZipCode[]
  interestedUsers UserInterestRegion[]
}

model ZipCode {
  code       String     @id
  regionCode String
  region     RegionCode @relation(fields: [regionCode], references: [code])
}

model UserInterestRegion {
  userId     String
  regionCode String
  user       User       @relation(fields: [userId], references: [id])
  region     RegionCode @relation(fields: [regionCode], references: [code])

  @@id([userId, regionCode])
}